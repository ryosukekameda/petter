        </div>

      </body>
      
    <% elsif admin_signed_in? %>
    
      <body>
          
        <div class="container">
          <%= yield %>
        </div>
 
      </body>
      
    <% else %>
    
      <body>
        
        <div class="container">
          <%= yield %>
        </div>
        
      </body>
      
    <% end %>

</html>
